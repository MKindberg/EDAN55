package lab2;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.Random;


public class Maxcut {
	
	private Random r = new Random();
	
	public static void main(String[] args) {
		
		int max = 0;
		Maxcut m = new Maxcut();
		max = m.readFile("matching_1000.txt");
		System.out.println(max);
	}
	
	
	
	public int readFile(String fileName){
		int sum = 0;
		int V;
		int E;
		boolean[] nodes;
		try (BufferedReader br = new BufferedReader(new FileReader(fileName));){
			
			String line = br.readLine();
			String[] head = line.split(" ");
			System.out.println(line);
			V = Integer.parseInt(head[0]);
			E = Integer.parseInt(head[1]);
			
			nodes = new boolean[V+1];
			for(int i = 1;i<V+1;i++){
				nodes[i] = r.nextBoolean();
			}
			line = br.readLine();
			while(line!=null){
				String[] edge = line.split(" ");
				int l = Integer.parseInt(edge[0]);
				int r = Integer.parseInt(edge[1]);
				int w = Integer.parseInt(edge[2]);
				if(nodes[l]!=nodes[r]){
					sum+=w;
				}
				line = br.readLine();
			}
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		return sum;
		
	}
}
